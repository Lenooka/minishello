{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
		{
			"label": "My Task",
			"type": "shell",
			"command": "valgrind",
			"args": [
				"--leak-check=full",
				"--show-leak-kinds=all",
				"--track-origins=yes",
				"./minishell"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": [],
		}
    ],
    "version": "2.0.0",
}